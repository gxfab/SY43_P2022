<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--below line is to create preference category-->
    <PreferenceCategory android:title="User">

        <SwitchPreference
            android:defaultValue="false"
            android:key="sw_mdp"
            android:title="Mot de passe"/>

        <EditTextPreference
            android:inputType="numberDecimal"
            android:key="et_mdp"
            android:title="configuration mot de passe"
            app:isPreferenceVisible="false" />

        <EditTextPreference
            android:key="et_username"
            android:title="Nom d'utilisateur"
           />
        <EditTextPreference
            android:key="et_email"
            android:title="Adresse mail"
            />


    </PreferenceCategory>
    <PreferenceCategory android:title="Préférence">
        <SwitchPreference
            android:defaultValue="false"
            android:key="sw_notif"
            android:title="Notification"/>

        <SwitchPreference
            android:defaultValue="false"
            android:key="sw_theme"
            android:title="Thème sombre"/>
    </PreferenceCategory>

</PreferenceScreen>
