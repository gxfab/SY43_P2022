<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.frgmAjoutDepense">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/frgmAjoutCategorie_tv_Categorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:accessibilityHeading="false"
        android:fontFamily="@font/allan"
        android:text="Entrer Une Dépense"
        android:textSize="36sp"
        android:textColor="#E503E1"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/frgmAjoutDepense_et_montant"
        android:layout_width="246dp"
        android:layout_height="67dp"
        android:layout_marginTop="100dp"
        android:digits="0123456789."
        android:hint="Montant..."
        android:textColor="#E503E1"
        android:textColorHint="#AA00FF"
        android:backgroundTint="#E503E1"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frgmAjoutCategorie_tv_Categorie"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/frgmAjoutCategorie_btn_ajouter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="Ajouter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frgmAjoutDepense_et_date" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/frgmAjoutDepense_tv_categorie"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="Choisir une catégorie"
            android:textColor="#E503E1"
            />

        <Spinner
            android:id="@+id/frgmAjoutDepense_spnr_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:spinnerMode="dialog"
            android:textColor="#E503E1"
            android:outlineAmbientShadowColor="#E503E1"
            android:backgroundTint="#AA00FF"


            />

    </LinearLayout>

    <EditText
        android:id="@+id/frgmAjoutDepense_et_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Date..."
        android:inputType="date"
        android:textColor="#E503E1"
        android:textColorHint="#AA00FF"
        android:backgroundTint="#E503E1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>