<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/frgmItem_tv_categorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="32dp"

        android:elevation="10dp"
        android:textColor="#E503E1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/frgmItem_btn_item"
        app:layout_constraintStart_toStartOf="@+id/frgmItem_btn_item"
        app:layout_constraintTop_toTopOf="@+id/frgmItem_btn_item"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/frgmItem_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="15dp"
        android:layout_marginTop="24dp"
        android:elevation="10dp"

        android:text=""
        android:textColor="#E503E1"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/frgmItem_btn_item"
        app:layout_constraintStart_toStartOf="@+id/frgmItem_btn_item"
        app:layout_constraintTop_toTopOf="@+id/frgmItem_btn_item" />

    <TextView
        android:id="@+id/frgmItem_tv_montant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="24dp"
        android:elevation="10dp"

        android:text="0"
        android:textAlignment="viewEnd"
        android:textColor="#E503E1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/frgmItem_btn_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/frgmItem_btn_item"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/frgmItem_btn_item"
        android:layout_width="0dp"
        android:layout_height="79dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/white"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/frgmItem_lyt_boutons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frgmItem_btn_item">

        <ImageButton
            android:id="@+id/frgmItem_btn_supprimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/cardview_shadow_end_color"

            app:srcCompat="@drawable/ic_baseline_delete_24" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>