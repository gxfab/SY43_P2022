        android:layout_marginStart="42dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="42dp"
        android:gravity="center"
        android:text="XXX€"
        android:textColor="#FFFFFF"
