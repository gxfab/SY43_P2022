<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayoutFragment"
        android:layout_width="match_parent"
        android:layout_height="711dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav_card"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-3dp" />

    <androidx.cardview.widget.CardView
        android:layout_height="90dp"
        android:layout_width="match_parent"
        android:id="@+id/bottom_nav_card"
        android:layout_marginBottom="-10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="15dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#80F10000">

            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="fill_horizontal|left"
                android:layout_marginLeft="25sp"
                app:srcCompat="@drawable/home" />

            <ImageView
                android:id="@+id/overview_icon"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="right|top"
                android:layout_marginRight="25sp"
                app:srcCompat="@drawable/evolution" />

            <TextView
                android:id="@+id/overview_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="15sp"
                android:text="Overview"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/categories_icon"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="center|top"
                app:srcCompat="@drawable/category" />

            <TextView
                android:id="@+id/categories_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="Categories"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/home_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginLeft="25sp"
                android:text="Home"
                android:textColor="#000000"
                android:textSize="18sp" />
        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>