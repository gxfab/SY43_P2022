<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutContainerCategory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:orientation="vertical"
    android:paddingVertical="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/categoryName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/item_category_prevision_name"
            android:textColor="@color/material_on_background_emphasis_high_type"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/categoryPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/money_placeholder"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button_delete_category"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:visibility="gone"
            app:icon="@drawable/ic_outline_delete_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp" />

        <ImageView
            android:id="@+id/button_expand"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:backgroundTint="@android:color/transparent"
            android:stateListAnimator="@null"
            app:iconTint="@color/material_on_background_emphasis_high_type"
            app:srcCompat="@drawable/ic_outline_keyboard_arrow_down_24" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_expenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/item_category_prevision_advice"
        android:textColor="@color/red"
        android:visibility="gone" />
</LinearLayout>