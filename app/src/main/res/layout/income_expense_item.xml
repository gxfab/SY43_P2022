<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/rectangle_container"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/emojiButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/orange"
            android:focusable="false"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/emojiHolder"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_container_darker"
            android:duplicateParentState="false"
            android:ems="10"
            android:focusable="false"
            android:gravity="center_vertical"
            android:hint="@string/sumName"
            android:inputType="textShortMessage"
            android:paddingHorizontal="10dp"
            android:textColor="@android:color/black"
            android:textSize="29sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        android:showDividers="none">

        <TextView
            android:id="@+id/ie_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_container_darker"
            android:gravity="center_vertical"
            android:hint="@string/sumValue"
            android:inputType="numberDecimal"
            android:paddingHorizontal="10dp"
            android:textColor="@android:color/black"
            android:textSize="29sp" />

        <TextView
            android:id="@+id/ie_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_container_darker"
            android:gravity="center_vertical|end"
            android:hint="@string/ie_date"
            android:inputType="date"
            android:justificationMode="none"
            android:paddingHorizontal="7dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="italic" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/deleteButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:backgroundTint="@color/red"
            android:clickable="true"
            android:contentDescription="@string/deleteForever"
            android:src="@drawable/ic_baseline_delete_forever_24"
            android:tint="@color/white" />
    </LinearLayout>

</LinearLayout>