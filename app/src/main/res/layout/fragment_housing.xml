<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="500dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".housing">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scrollbarSize="0dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/furniture_sub"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="105dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/furniture_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/furniture"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/furniture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Furniture"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/furniture_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/furniture_amount"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@+id/furniture"
                    app:layout_constraintStart_toStartOf="@+id/furniture"
                    android:layout_marginEnd="20dp"
                    android:hint="Amount"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cleaning_sub"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/cleaning_icon"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/cleaning"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/cleaning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Cleaning"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/cleaning_icon"
                    app:layout_constraintTop_toTopOf="parent" />
                <EditText
                    android:id="@+id/cleaning_amount"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@+id/cleaning"
                    app:layout_constraintStart_toStartOf="@+id/cleaning"
                    android:layout_marginEnd="20dp"
                    android:hint="Amount"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/garden_sub"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="210dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/garden_icon"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/garden"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/garden"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="64dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Garden"
                    android:textColor="#FFFFFF"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/garden_icon"
                    app:layout_constraintTop_toTopOf="parent" />
                <EditText
                    android:id="@+id/garden_amount"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@+id/garden"
                    app:layout_constraintStart_toStartOf="@+id/garden"
                    android:layout_marginEnd="20dp"
                    android:hint="Amount"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/insurance_sub"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="315dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/house_insurance_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/house_insurance"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/house_insurance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Insurance"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/house_insurance_icon"
                    app:layout_constraintTop_toTopOf="parent" />
                <EditText
                    android:id="@+id/house_insurance_amount"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@+id/house_insurance"
                    app:layout_constraintStart_toStartOf="@+id/house_insurance"
                    android:layout_marginEnd="20dp"
                    android:hint="Amount"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rent_sub"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="425dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/rent_icon"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/rent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="84dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Rent"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/rent_icon"
                    app:layout_constraintTop_toTopOf="parent" />
                <EditText
                    android:id="@+id/rent_amount"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@+id/rent"
                    app:layout_constraintStart_toStartOf="@+id/rent"
                    android:layout_marginEnd="20dp"
                    android:hint="Amount"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/repairs_sub"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="535dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/repairs_icon"
                    android:layout_width="120dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/repairs"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/repairs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Repairs"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/repairs_icon"
                    app:layout_constraintTop_toTopOf="parent" />
                <EditText
                    android:id="@+id/repairs_amount"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@+id/repairs"
                    app:layout_constraintStart_toStartOf="@+id/repairs"
                    android:layout_marginEnd="20dp"
                    android:hint="Amount"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/taxes_sub"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="645dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/taxes_icon"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/taxes"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/taxes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Taxes"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/taxes_icon"
                    app:layout_constraintTop_toTopOf="parent" />
                <EditText
                    android:id="@+id/taxes_amount"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@+id/taxes"
                    app:layout_constraintStart_toStartOf="@+id/taxes"
                    android:layout_marginEnd="20dp"
                    android:hint="Amount"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/utilities_sub"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="755dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/utilities_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/utilities"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/utilities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="64dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Utilities"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/utilities_icon"
                    app:layout_constraintTop_toTopOf="parent" />
                <EditText
                    android:id="@+id/utilities_amount"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@+id/utilities"
                    app:layout_constraintStart_toStartOf="@+id/utilities"
                    android:layout_marginEnd="20dp"
                    android:hint="Amount"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>
    </ScrollView>

</FrameLayout>