<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearance.MoneyZ.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="ShapeAppearance.MoneyZ.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Card style used for the background -->
    <style name="Widget.MoneyZ.MaterialCardView.BackgroundCard" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerRadius">32dp</item>
        <item name="cardCornerRadius">32dp</item>
    </style>

    <style name="TextAppearance.MoneyZ.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="Widget.MoneyZ.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.MoneyZ.Button</item>
    </style>

    <!-- ActionBar -->
    <style name="Theme.MoneyZ.ActionBar" parent="@style/Widget.MaterialComponents.ActionBar.Solid">
        <item name="elevation">0dp</item>
    </style>

</resources>
