<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="20dp"
    card_view:contentPadding="10dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/nom"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:text="Nom du projet : "
                android:textSize="15dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/nom_projet"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:paddingLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/actualMontant"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:text="Montant actuel : "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/actualMontant_projet"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:paddingLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/totalMontant"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:text="Montant total : "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/totalMontant_projet"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:paddingLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date_limite"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:text="Date limite : "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/date_limite_projet"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:paddingLeft="5dp"/>

        </LinearLayout>





    </LinearLayout>









</androidx.cardview.widget.CardView>