<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.statistique.StatistiqueFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/button_mensuel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_mensuel"
            android:layout_margin="5dp"
            app:backgroundTint="@color/teal_700"/>

        <Button
            android:id="@+id/button_annuel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_annuel"
            android:layout_margin="5dp"
            app:backgroundTint="@color/teal_700"/>



    </LinearLayout>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/activity_main_piechart"
        android:layout_width="426dp"
        android:layout_height="497dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:background="@drawable/spinner"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:text="@string/annee"
            android:textColor="@color/white"/>

        <Spinner
            android:id="@+id/spinner_annee"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:background="@drawable/spinner"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:text="@string/mois"
            android:textColor="@color/white"/>

        <Spinner
            android:id="@+id/spinner_mois"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"/>

    </LinearLayout>

    <Button
        android:id="@+id/button_filtre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FILTRE"
        android:layout_margin="5dp"
        app:backgroundTint="@color/teal_700"/>

</LinearLayout>