<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <!-- Logo space -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOGO"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Account Preview -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="80pt"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/light_green"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/material_on_surface_stroke"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:paddingLeft="20dp"
                    android:paddingTop="6dp"
                    android:text="Hello, Jacob"
                    android:textFontWeight="900"
                    android:textSize="70px"></com.google.android.material.textview.MaterialTextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        >



                        <ProgressBar
                            style="?android:progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:progress="65"
                            android:progressDrawable="@drawable/complete_progress_bar"
                            android:rotation="-90"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_above="@id/moneyDivider"
                                android:layout_centerInParent="true"
                                android:text="125 €"
                                android:textAlignment="center"
                                app:fontFamily="@font/inter"
                                android:textFontWeight="2000"
                                android:textSize="52px"
                                android:textColor="@color/blue"></com.google.android.material.textview.MaterialTextView>

                            <com.google.android.material.divider.MaterialDivider
                                android:id="@+id/moneyDivider"
                                android:layout_width="45dp"
                                android:layout_height="1dp"
                                app:dividerColor="@color/light_blue"
                                android:layout_centerInParent="true"></com.google.android.material.divider.MaterialDivider>

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/moneyDivider"
                                android:layout_centerInParent="true"
                                android:text="230 €"
                                android:textAlignment="center"
                                app:fontFamily="@font/inter"
                                android:textFontWeight="500"
                                android:textSize="48px"
                                android:textColor="@color/light_blue"></com.google.android.material.textview.MaterialTextView>


                        </RelativeLayout>


                    </RelativeLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="16px"
                        android:layout_height="match_parent"
                        app:dividerColor="@color/green"
                        android:layout_marginBottom="30px"
                        android:layout_marginTop="10px">

                    </com.google.android.material.divider.MaterialDivider>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

        <!-- Categories -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="220pt"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/material_on_surface_stroke"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:padding="8dp"
                    android:text="Categories"
                    android:textAlignment="center"
                    android:textFontWeight="900"
                    android:textSize="70px">

                </com.google.android.material.textview.MaterialTextView>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnCount="3"
                    android:orientation="horizontal"
                    android:rowCount="4">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_height="50pt"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="@color/dark_green"
                        app:cardCornerRadius="20dp"></com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_height="50pt"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="@color/dark_green"
                        app:cardCornerRadius="20dp"></com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_height="50pt"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="@color/dark_green"
                        app:cardCornerRadius="20dp"></com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_height="50pt"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="@color/dark_green"
                        app:cardCornerRadius="20dp"></com.google.android.material.card.MaterialCardView>

                </GridLayout>
            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>



</RelativeLayout>