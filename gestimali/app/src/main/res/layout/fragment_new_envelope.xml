<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/add_envelope"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/light_blue_square" />

    <TextView
        android:id="@+id/envelope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/add_envelope_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/add_envelope"
        app:layout_constraintRight_toRightOf="@id/add_envelope"
        style="@style/add_title"/>

    <EditText
        android:id="@+id/editEnvelopeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:inputType="textPersonName"
        android:text="@string/add_income_name"
        app:layout_constraintLeft_toLeftOf="@id/add_envelope"
        app:layout_constraintRight_toRightOf="@id/add_envelope"
        app:layout_constraintTop_toBottomOf="@id/envelope"
        />

    <EditText
        android:id="@+id/editEnvelopeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:inputType="textPersonName"
        android:text="@string/add_envelope_amount"
        app:layout_constraintLeft_toLeftOf="@id/add_envelope"
        app:layout_constraintRight_toRightOf="@id/add_envelope"
        app:layout_constraintTop_toBottomOf="@id/editEnvelopeName"
        />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_quit"
        android:background="@color/light_blue"
        app:layout_constraintRight_toRightOf="@id/add_envelope"
        app:layout_constraintTop_toTopOf="@id/add_envelope"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_valid"
        app:layout_constraintRight_toRightOf="@id/add_envelope"
        app:layout_constraintLeft_toLeftOf="@id/add_envelope"
        app:layout_constraintTop_toBottomOf="@id/editEnvelopeValue"
        app:layout_constraintBottom_toBottomOf="@id/add_envelope"
        />


</androidx.constraintlayout.widget.ConstraintLayout>