<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:onClick="seeIncome">

    <ImageView
        android:id="@+id/moneyHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/money_holder" />

    <ImageView
        android:id="@+id/infoHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/moneyHolder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/moneyHolder"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/info_holder">

    </ImageView>

    <TextView
        android:id="@+id/wish_name"
        style="@style/moneyFlowTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/wish_name"
        android:translationZ="10dp"
        app:layout_constraintTop_toTopOf="@+id/infoHolder"
        app:layout_constraintBottom_toBottomOf="@id/infoHolder"
        app:layout_constraintEnd_toStartOf="@+id/moneyHolder"
        app:layout_constraintStart_toStartOf="@+id/infoHolder"
        />


    <TextView
        android:id="@+id/wish_amount"
        style="@style/moneyFlowAmountStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/amount"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_separator"
        app:layout_constraintEnd_toEndOf="@id/moneyHolder"
        app:layout_constraintStart_toStartOf="@+id/moneyHolder"
        app:layout_constraintTop_toTopOf="@+id/moneyHolder" />

    <TextView
        android:id="@+id/wish_amount_needed"
        style="@style/moneyFlowAmountStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/amount"
        app:layout_constraintBottom_toBottomOf="@+id/moneyHolder"
        app:layout_constraintEnd_toEndOf="@id/moneyHolder"
        app:layout_constraintStart_toStartOf="@+id/moneyHolder"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_separator" />

    <View
        android:id="@+id/horizontal_separator"
        android:layout_width="330dp"
        android:layout_height="3dp"
        app:layout_constraintStart_toStartOf="@id/infoHolder"
        app:layout_constraintEnd_toEndOf="@id/moneyHolder"
        app:layout_constraintBottom_toBottomOf="@+id/infoHolder"
        app:layout_constraintTop_toTopOf="@+id/infoHolder"
        android:visibility="invisible"/>






</androidx.constraintlayout.widget.ConstraintLayout>