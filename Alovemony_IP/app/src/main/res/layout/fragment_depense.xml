<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bouton_ajout_categorie"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_button_depense_list"
        android:text="Cliquez ici pour ajouter une catégorie"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAllCaps="false">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_categorie_list"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_below="@id/bouton_ajout_categorie"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bouton_depense_list"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/background_button_depense_list"
        android:text="Cliquez ici pour vérifier vos dépenses"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAllCaps="false"
        android:layout_below="@id/recycler_categorie_list">

</androidx.appcompat.widget.AppCompatButton>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/depense_recycler_list"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@+id/bouton_depense_list" />



</RelativeLayout>
