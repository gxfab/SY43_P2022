        <activity android:name=".connexionactivities.ConnexionCategorieActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>

        <activity android:name=".connexionactivities.ConnexionPrevAutoActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
