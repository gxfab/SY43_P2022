<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZeroDay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/zero_pink0</item>
        <item name="colorPrimaryVariant">@color/zero_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/zero_pink0</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/zero_purple</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Style Title -->
    <style name="TitleDefaultStyle">
        <item name="android:textColor">@color/zero_title</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style Subtitle -->
    <style name="SubtitleDefaultStyle">
        <item name="android:textColor">@color/zero_subtitle</item>
        <item name="android:textSize">16dp</item>
    </style>
    
</resources>