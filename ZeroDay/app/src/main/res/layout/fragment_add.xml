<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.AddFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginTop="@dimen/default_top_margin"
        android:layout_marginLeft="@dimen/default_left_margin"
        android:text="Add"
        android:id="@+id/add_title"
        style="@style/TitleDefaultStyle"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_title"
        android:layout_marginLeft="@dimen/default_left_margin"
        android:text="Add incomes or expenses"
        android:id="@+id/add_subtitle"
        style="@style/SubtitleDefaultStyle"

        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="140dp"
        >

        <Button
            android:id="@+id/add_income_button"
            android:layout_width="260dp"

            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/add_income_button"


            android:text="Add Income"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="@null" />


        <Button
            android:id="@+id/add_expense_button"

            android:layout_width="260dp"
            android:layout_height="80dp"

            android:layout_below="@id/add_income_button"

            android:text="Add Expense"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/add_expense_button"
            app:backgroundTint="@null"


            android:layout_marginBottom="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>