<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.CycleSettingActivity"
    android:background="@color/white">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Set Your Cycle"
        style="@style/TitleDefaultStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/default_top_margin"
        android:layout_marginLeft="@dimen/default_left_margin"
        android:id="@+id/cycle_setting_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cycle_setting_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/default_left_margin"
        style="@style/SubtitleDefaultStyle"
        android:text="Choose the type of cycle and when it begins"
        android:id="@+id/cycle_setting_sub_title"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/cycle_setting_sub_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/custom_cycle_setting_cycle_shape"
        android:layout_marginTop="40dp"
        android:spinnerMode="dropdown"
        android:id="@+id/cycle_setting_cycle"

        android:layout_marginLeft="@dimen/default_left_margin"
        android:layout_marginRight="@dimen/default_left_margin"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/cycle_setting_cycle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/custom_cycle_setting_start_date_shape"
        android:layout_marginTop="20dp"
        android:spinnerMode="dropdown"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="Choose the biginning date"
        android:paddingLeft="10dp"
        android:id="@+id/cycle_setting_start_date"

        android:layout_marginLeft="@dimen/default_left_margin"
        android:layout_marginRight="@dimen/default_left_margin"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cycle_setting_start_date"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="@dimen/default_left_margin"
        android:layout_marginRight="@dimen/default_left_margin"
        android:textColor="@color/white"
        android:text="Continue"
        android:textSize="15dp"
        android:background="@drawable/custom_cycle_setting_continue_button"
        android:id="@+id/cycle_setting_continue_button"
        app:backgroundTint="@null"
        android:textAllCaps="false"
        />

</androidx.constraintlayout.widget.ConstraintLayout>