<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.CategoryActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginLeft="@dimen/default_left_margin"
        android:layout_marginTop="@dimen/default_top_margin"

        style="@style/TitleDefaultStyle"

        android:text="Category Name"

        />

    <TextView
        android:id="@+id/category_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/category_title"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginLeft="@dimen/default_left_margin"

        style="@style/SubtitleDefaultStyle"

        android:text="Add one or more expenses"

        />

    <FrameLayout

        android:id="@+id/category_list"
        android:layout_width="match_parent"
        android:layout_height="380dp"

        android:layout_marginLeft="@dimen/default_left_margin"
        android:layout_marginRight="@dimen/default_left_margin"
        android:layout_marginTop="20dp"

        app:layout_constraintTop_toBottomOf="@id/category_subtitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"


        />

    <Button

        android:id="@+id/add_item_button"
        android:layout_width="wrap_content"
        android:layout_height="70dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_list"

        android:layout_marginTop="20dp"

        android:drawableLeft="@drawable/ic_add"
        android:drawableTint="@color/black"


        android:text="Add New"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textAllCaps="false"
        android:background="@drawable/add_category_button"
        app:backgroundTint="@null"


        />

</androidx.constraintlayout.widget.ConstraintLayout>