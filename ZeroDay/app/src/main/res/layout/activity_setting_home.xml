<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.SettingHomeActivity">

    <TextView
        android:id="@+id/setting_home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/setting_home_account_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/setting_home_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/custom_category_icon_circle"
        android:id="@+id/setting_home_user_background"
        app:layout_constraintTop_toBottomOf="@id/setting_home_account_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/zero_name_validation_icon"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="47dp"
        android:id="@+id/setting_home_user_logo"
        app:layout_constraintTop_toBottomOf="@id/setting_home_account_title"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/setting_home_account_username"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/setting_home_account_title"
        app:layout_constraintLeft_toRightOf="@id/setting_home_user_background"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        android:paddingRight="5dp"
        />

    <TextView
        android:id="@+id/setting_home_account_description"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Personal Info"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/setting_home_account_username"
        app:layout_constraintLeft_toRightOf="@id/setting_home_user_background"
        android:layout_marginLeft="10dp"
        android:paddingRight="5dp" />

    <ImageButton
        android:id="@+id/setting_home_account_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@id/setting_home_account_username"
        app:layout_constraintTop_toBottomOf="@id/setting_home_account_title"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_settings_main_button"
        android:src="@drawable/custom_settings_next_button"
        />

    <TextView
        android:id="@+id/setting_home_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/setting_home_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        />

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/custom_category_icon_circle"
        android:id="@+id/setting_home_language_background"
        app:layout_constraintTop_toBottomOf="@id/setting_home_setting_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/zero_name_validation_icon"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="47dp"
        android:id="@+id/setting_home_language_logo"
        app:layout_constraintTop_toBottomOf="@id/setting_home_setting_title"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/setting_home_settings_language"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Language"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/setting_home_setting_title"
        app:layout_constraintLeft_toRightOf="@id/setting_home_language_background"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:paddingRight="5dp"
        />

    <TextView
        android:id="@+id/setting_home_language_current_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/setting_home_settings_language"
        app:layout_constraintRight_toLeftOf="@id/setting_home_settings_language_button"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"
        android:text="English"
        android:textSize="14dp"/>

    <ImageButton
        android:id="@+id/setting_home_settings_language_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="@id/setting_home_account_button"
        app:layout_constraintTop_toTopOf="@id/setting_home_language_background"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_settings_main_button"
        android:src="@drawable/custom_settings_next_button"
        />

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/custom_category_icon_circle"
        android:id="@+id/setting_home_notification_background"
        app:layout_constraintTop_toBottomOf="@id/setting_home_language_background"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/zero_name_validation_icon"
        android:layout_marginTop="37dp"
        android:layout_marginLeft="47dp"
        android:id="@+id/setting_home_notification_logo"
        app:layout_constraintTop_toBottomOf="@id/setting_home_language_background"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/setting_home_settings_notifications"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="@id/setting_home_notification_background"
        app:layout_constraintLeft_toRightOf="@id/setting_home_notification_background"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:paddingRight="5dp"
        />

    <ImageButton
        android:id="@+id/setting_home_settings_notifications_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="@id/setting_home_account_button"
        app:layout_constraintTop_toTopOf="@id/setting_home_notification_background"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_settings_main_button"
        android:src="@drawable/custom_settings_next_button"
        />

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/custom_category_icon_circle"
        android:id="@+id/setting_home_mode_background"
        app:layout_constraintTop_toBottomOf="@id/setting_home_notification_background"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/zero_name_validation_icon"
        android:layout_marginTop="37dp"
        android:layout_marginLeft="47dp"
        android:id="@+id/setting_home_mode_logo"
        app:layout_constraintTop_toBottomOf="@id/setting_home_notification_background"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/setting_home_settings_mode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Dark Mode"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="@id/setting_home_mode_background"
        app:layout_constraintLeft_toRightOf="@id/setting_home_mode_background"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:paddingRight="5dp"
        />

    <Switch
        android:id="@+id/setting_home_settings_mode_switch"
        android:layout_width="40dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="@id/setting_home_account_button"
        app:layout_constraintTop_toTopOf="@id/setting_home_mode_background"
        android:layout_marginTop="14dp"
        />

    <TextView
        android:id="@+id/setting_home_mode_current_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/setting_home_settings_mode"
        app:layout_constraintRight_toLeftOf="@id/setting_home_settings_language_button"
        android:layout_marginTop="7dp"
        android:layout_marginRight="20dp"
        android:text="off"
        android:textSize="14dp"/>

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/custom_category_icon_circle"
        android:id="@+id/setting_home_help_background"
        app:layout_constraintTop_toBottomOf="@id/setting_home_mode_background"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/zero_name_validation_icon"
        android:layout_marginTop="37dp"
        android:layout_marginLeft="47dp"
        android:id="@+id/setting_home_help_logo"
        app:layout_constraintTop_toBottomOf="@id/setting_home_mode_background"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/setting_home_settings_help"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Help"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="@id/setting_home_help_background"
        app:layout_constraintLeft_toRightOf="@id/setting_home_help_background"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:paddingRight="5dp"
        />

    <ImageButton
        android:id="@+id/setting_home_settings_help_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="@id/setting_home_account_button"
        app:layout_constraintTop_toTopOf="@id/setting_home_help_background"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_settings_main_button"
        android:src="@drawable/custom_settings_next_button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>