<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zeroday">

    <!-- Le style par défaut est le style du "splashscreen" on remet le bon theme une fois l'activité de départ chargée ce qui évite la création d'une activité dédiée au splashscreen-->
   <!-- Ainsi le splashscreen est visible uniquement le temps nécessaire -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZeroDay">

        <!--Activité de départ -->
        <activity
            android:name=".views.test.IncomesTest"
            android:exported="true"
            android:screenOrientation="portrait"/>
          
        <activity
            android:name=".views.SettingHomeActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".views.StartActivity"
            android:exported="true"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- Activité de validation du prénom -->
        <activity
            android:name=".views.NameValidationActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            />

        <!-- Activité d'ajout de dépenses ou de revenus -->
        <activity
            android:name=".views.ExpenseActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <!-- Activité de définition du cycle -->
        <activity
            android:name=".views.CycleSettingActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>


        <!-- Activité d'affichage du revenu de départ -->
        <activity
            android:name=".views.StartTotalIncomesActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>


        <!-- Activité principale avec barre de navigation -->
        <activity
            android:name=".views.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            />

        <!-- Activité d'affichage et d'ajout des items d'une catégorie -->
        <activity
            android:name=".views.CategoryActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

    </application>

</manifest>