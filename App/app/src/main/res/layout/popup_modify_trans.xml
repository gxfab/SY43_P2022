<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="?attr/colorSecondary">

<EditText
    android:id="@+id/title"
    android:layout_width="200dp"
    android:layout_height="40dp"
    android:textSize="25dp"
    android:hint="Nom"
    android:background="?attr/colorPrimaryVariant"
    android:textColor="?attr/colorPrimary"
    android:layout_marginTop="30dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toStartOf="@id/depense"
    app:layout_constraintStart_toStartOf="parent"
    android:gravity="left"
    />

<TextView
    android:id="@+id/text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Depense ?"
    android:textSize="25dp"
    android:textColor="?attr/colorPrimary"
    android:layout_marginTop="50dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/title"
    app:layout_constraintTop_toTopOf="parent" />

<CheckBox
    android:id="@+id/depense"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:buttonTint="?attr/colorPrimary"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/montant"
    app:layout_constraintTop_toBottomOf="@+id/text" />

    <Button
        android:id="@+id/valider"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="70dp"
        android:text="valider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/annuler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pick_date" />

    <Button
        android:id="@+id/annuler"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="70dp"
        android:text="annuler"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/valider"
        app:layout_constraintTop_toBottomOf="@id/pick_date" />

<EditText
    android:id="@+id/montant"
    android:layout_width="200dp"
    android:layout_height="40dp"
    android:textSize="25dp"
    android:hint="Cout en â‚¬"
    android:inputType="numberDecimal"
    android:background="?attr/colorPrimaryVariant"
    android:textColor="?attr/colorPrimary"
    android:layout_marginTop="30dp"
    app:layout_constraintTop_toBottomOf="@+id/title"
    app:layout_constraintEnd_toStartOf="@id/depense"
    app:layout_constraintStart_toStartOf="parent"
    android:gravity="left"
    />

<TextView
    android:id="@+id/categorie_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:text="Categorie :"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/montant"
    android:textColor="?attr/colorPrimary"
    android:textSize="25dp"
    />
<Spinner
    android:id="@+id/categorie"
    android:spinnerMode="dialog"
    android:layout_width="300dp"
    android:layout_height="40dp"
    android:textSize="25dp"
    android:popupBackground="?attr/colorSecondary"
    android:textColor="?attr/colorPrimaryVariant"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toBottomOf="@+id/categorie_text"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:gravity="left"
    />
<Button
    android:id="@+id/ajout_cat"
    android:layout_width="165dp"
    android:layout_height="60dp"
    android:layout_marginTop="20dp"
    android:text="Ajouter une categorie"
    app:layout_constraintTop_toBottomOf="@id/categorie"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>


<EditText
    android:id="@+id/date"
    android:layout_width="300dp"
    android:layout_height="40dp"
    android:textSize="25dp"
    android:hint="Choisir date"
    android:inputType="none"
    android:editable="false"
    android:background="?attr/colorPrimaryVariant"
    android:textColor="?attr/colorPrimary"
    android:layout_marginTop="30dp"
    app:layout_constraintTop_toBottomOf="@+id/ajout_cat"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:gravity="left"
    />
<Button
    android:id="@+id/pick_date"
    android:layout_width="165dp"
    android:layout_height="60dp"
    android:layout_marginTop="20dp"
    android:text="Choisir date"
    app:layout_constraintTop_toBottomOf="@id/date"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>