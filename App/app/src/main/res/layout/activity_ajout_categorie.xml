<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AjoutCategorie">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="AJOUT DE CATEGORIE"
            android:textColor="?attr/colorSecondary"
            android:textSize="30sp" />

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/bottom_menu"
        />

    <EditText
        android:id="@+id/cat_nom"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="25dp"
        android:hint="Nom categorie"
        android:background="?attr/colorSecondary"
        android:textColor="?attr/colorPrimaryVariant"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="left"
        />
    <EditText
        android:id="@+id/color"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="25dp"
        android:hint="Couleur"
        android:background="?attr/colorSecondary"
        android:textColor="?attr/colorPrimaryVariant"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/cat_nom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="left"
        />

    <Button
        android:id="@+id/valider"
        android:layout_width="215dp"
        android:layout_height="65dp"
        android:layout_marginBottom="10dp"
        android:text="Valider"
        app:layout_constraintBottom_toTopOf="@id/annuler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/annuler"
        android:layout_width="215dp"
        android:layout_height="65dp"
        android:layout_marginBottom="70dp"
        android:text="Annuler"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>