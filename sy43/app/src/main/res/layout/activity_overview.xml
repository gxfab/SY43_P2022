<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Overview">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/chartTabLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center|top"
        app:layout_constraintBottom_toBottomOf="@+id/chartsContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:tabGravity="fill"
        app:tabIndicator="@drawable/tab_indicator"
        app:tabIndicatorAnimationMode="elastic"
        app:tabIndicatorGravity="stretch"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/white"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/chartsContainer"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chartTabLayout">

    </androidx.viewpager2.widget.ViewPager2>


    <androidx.cardview.widget.CardView
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:id="@+id/bottom_nav_card"
        android:layout_marginBottom="-10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="bottom"
        app:cardCornerRadius="15dp">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#f87f7f">

            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="fill_horizontal|left"
                android:layout_marginLeft="25sp"
                app:srcCompat="@drawable/home" />

            <ImageView
                android:id="@+id/overview_icon"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="right|top"
                android:layout_marginRight="25sp"
                app:srcCompat="@drawable/evolution" />

            <TextView
                android:id="@+id/overview_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="15sp"
                android:text="Overview"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/categories_icon"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="center|top"
                app:srcCompat="@drawable/category" />

            <TextView
                android:id="@+id/categories_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="Categories"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/home_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginLeft="25sp"
                android:text="Home"
                android:textColor="#000000"
                android:textSize="18sp" />

        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>