<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <androidx.cardview.widget.CardView
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_gravity="top"
        android:layout_marginTop="-10dp"
        app:cardBackgroundColor="#f87f7f"
        app:cardCornerRadius="15dp">

        <TextView
            android:id="@+id/total_income_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35sp"
            android:layout_marginTop="140sp"
            android:text="1500$"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/balance_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="140sp"
            android:layout_marginEnd="45sp"
            android:text="487$"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/expense_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="140sp"
            android:text="1013$"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="25sp"
            android:text="Budget Buddy"
            android:textAlignment="center"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/Period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="Period"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="italic" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="178dp"
                android:layout_height="48dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:dropDownWidth="match_parent"
                android:entries="@array/Months_Array"
                tools:ignore="TouchTargetSizeCheck" />

            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="48dp"
                android:layout_weight="1" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45sp"
            android:layout_marginTop="170sp"
            android:text="Income"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="170sp"
            android:text="Expenses"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="170sp"
            android:layout_marginEnd="45sp"
            android:text="Balance"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="460sp"
            android:text="Latest Activity"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="190dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp">
            <com.google.android.material.tabs.TabLayout
                android:elevation="15dp"
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="50dp"
                android:layout_gravity="center|top"
                app:tabGravity="fill"
                app:tabIndicator="@drawable/tab_indicator"
                app:tabIndicatorAnimationMode="elastic"
                app:tabIndicatorGravity="stretch"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/white"
                tools:ignore="SpeakableTextPresentCheck" />
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/child_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal">

            </androidx.viewpager2.widget.ViewPager2>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="25sp"
                android:layout_margin="5dp"
                android:text="Projects List"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="#f0f0f0"
                android:elevation="15dp"
                android:layout_marginBottom="5dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:id="@+id/display_projects_recyclerview"/>
        </LinearLayout>

    </LinearLayout>




    <androidx.cardview.widget.CardView
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:id="@+id/bottom_nav_card"
        android:layout_marginBottom="-10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="bottom"
        app:cardCornerRadius="15dp">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#f87f7f">

            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="fill_horizontal|left"
                android:layout_marginLeft="25sp"
                app:srcCompat="@drawable/home" />

            <ImageView
                android:id="@+id/overview_icon"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="right|top"
                android:layout_marginRight="25sp"
                app:srcCompat="@drawable/evolution" />

            <TextView
                android:id="@+id/overview_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="15sp"
                android:text="Overview"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/categories_icon"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="center|top"
                app:srcCompat="@drawable/category" />

            <TextView
                android:id="@+id/categories_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="Categories"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/home_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginLeft="25sp"
                android:text="Home"
                android:textColor="#000000"
                android:textSize="18sp" />

        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </androidx.cardview.widget.CardView>

</FrameLayout>
