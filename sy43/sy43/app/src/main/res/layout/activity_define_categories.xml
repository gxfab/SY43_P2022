<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:background="#ff95cc"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Define your Categories"
        android:textColor="#000000"
        android:textAllCaps="true"
        android:layout_gravity="center|top"
        android:gravity="center"
        android:textSize="30dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text="@string/description"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000000"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="160dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/food_cat"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="105dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/food_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="-105dp"
                    android:src="@drawable/food"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/food"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="28dp"
                    android:gravity="center"
                    android:text="Food"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/food_icon"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/housing_cat"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>

                <ImageView
                    android:id="@+id/housing_icon"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="-120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/house" />

                <TextView
                    android:id="@+id/housing"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="28dp"
                    android:gravity="center"
                    android:text="Housing"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/housing_icon"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/communication_cat"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="210dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/communication_icon"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginStart="-105dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/phone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/communication"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="28dp"
                    android:gravity="center"
                    android:text="Communication"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/communication_icon"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/transport_cat"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="315dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/transport_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="-110dp"
                    android:src="@drawable/transport"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/transport"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="28dp"
                    android:gravity="center"
                    android:text="Transport"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/transport_icon"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/clothing_cat"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="425dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/clothing_icon"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginStart="-105dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/clothing"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/clothing"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="28dp"
                    android:gravity="center"
                    android:text="Clothing"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/clothing_icon"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/entertainment_cat"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="535dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/entertainment_icon"
                    android:layout_width="120dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="-120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/entertainment"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/entertainment"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="28dp"
                    android:gravity="center"
                    android:text="Entertainment"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/entertainment_icon"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/finance_cat"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="645dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/finance_icon"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginStart="-105dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/finance"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/finance"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="28dp"
                    android:text="Finance"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/finance_icon"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/health_cat"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="755dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/health_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="-110dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/health"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/health"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="28dp"
                    android:gravity="center"
                    android:text="Health"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/health_icon"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </ScrollView>
    <androidx.cardview.widget.CardView
        android:id="@+id/continue_to_home_btn"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center|bottom"
        android:backgroundTint="#ff95cc"
        android:textSize="25sp"
        app:cardCornerRadius="35dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#000000"
            android:text="Continue"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_frame_back"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"/>
</FrameLayout>








