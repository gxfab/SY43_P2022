<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="500dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".housing">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scrollbarSize="0dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/body_care_sub"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="105dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/body_care_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bodycare"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/body_care"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Body care"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/body_care_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/bodycare_amount"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:hint="Amount"
                    app:layout_constraintStart_toEndOf="@+id/body_care_icon"
                    app:layout_constraintTop_toBottomOf="@+id/body_care" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/barber_sub"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/barber_icon"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/barber"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/barber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Barber"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/barber_icon"
                    app:layout_constraintTop_toTopOf="parent" />
                <EditText
                    android:id="@+id/barber_amount"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@+id/barber"
                    app:layout_constraintStart_toEndOf="@+id/barber_icon"
                    android:layout_marginEnd="20dp"
                    android:hint="Amount"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/doctor_sub"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="210dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/doctor_icon"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/doctor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="64dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Doctor"
                    android:textColor="#FFFFFF"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/doctor_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/doctor_amount"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="24dp"
                    android:hint="Amount"
                    app:layout_constraintStart_toEndOf="@+id/doctor_icon"
                    app:layout_constraintTop_toBottomOf="@+id/doctor" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/life_insurance_sub"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="315dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/life_insurance_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/life_insurance"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/life_insurance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Life Insurance"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/life_insurance_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/life_insurance_amount"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:hint="Amount"
                    app:layout_constraintStart_toEndOf="@+id/life_insurance_icon"
                    app:layout_constraintTop_toBottomOf="@+id/life_insurance" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pharmacy_sub"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="425dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/pharmacy_icon"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/pharmacy"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/pharmacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Pharmacy"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/pharmacy_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/pharmacy_amount"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="24dp"
                    android:hint="Amount"
                    app:layout_constraintStart_toEndOf="@+id/pharmacy_icon"
                    app:layout_constraintTop_toBottomOf="@+id/pharmacy" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </ScrollView>

</FrameLayout>