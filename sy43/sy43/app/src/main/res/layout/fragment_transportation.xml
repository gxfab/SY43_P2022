<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="500dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".transportation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scrollbarSize="0dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/carfees_sub"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="105dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/automobile_fees_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/car_fees"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/automobile_fees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Autombile Fees"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/automobile_fees_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/automobile_insurance_amount"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:hint="Amount"
                    app:layout_constraintStart_toStartOf="@+id/automobile_fees"
                    app:layout_constraintTop_toBottomOf="@+id/automobile_fees" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/car_insurance_sub"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/automobile_insurance_icon"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/car_insurance"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/automobile_insurance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Insurance"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/automobile_insurance_icon"
                    app:layout_constraintTop_toTopOf="parent" />
                <EditText
                    android:id="@+id/cleaning_amount"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@+id/automobile_insurance"
                    app:layout_constraintStart_toEndOf="@+id/automobile_insurance_icon"
                    android:layout_marginEnd="20dp"
                    android:hint="Amount"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fuel_sub"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="210dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/fuel_icon"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/fuel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/fuel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="88dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Fuel"
                    android:textColor="#FFFFFF"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/fuel_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/fuel_amount"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="12dp"
                    android:hint="Amount"
                    app:layout_constraintStart_toEndOf="@+id/fuel_icon"
                    app:layout_constraintTop_toBottomOf="@+id/fuel" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/parking_sub"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="315dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/parking_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/parking"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/parking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Parking"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/parking_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/parking_amount"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:hint="Amount"
                    app:layout_constraintStart_toEndOf="@+id/parking_icon"
                    app:layout_constraintTop_toBottomOf="@+id/parking" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tolls_sub"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="425dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/tolls_icon"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/tolls"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tolls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="84dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Tolls"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/tolls_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/tolls_amount"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="28dp"
                    android:hint="Amount"
                    app:layout_constraintStart_toEndOf="@+id/tolls_icon"
                    app:layout_constraintTop_toBottomOf="@+id/tolls" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/transportation_sub"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="535dp"
                android:background="#1b97d5">

                <View
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#ff95cc"/>
                <ImageView
                    android:id="@+id/transportation_icon"
                    android:layout_width="120dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/transportation"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/transportation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Transportation"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/transportation_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/transportation_amount"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@+id/transportation"
                    app:layout_constraintStart_toEndOf="@+id/transportation_icon"
                    android:layout_marginEnd="20dp"
                    android:hint="Amount"/>

            </androidx.constraintlayout.widget.ConstraintLayout>




        </androidx.cardview.widget.CardView>
    </ScrollView>

</FrameLayout>