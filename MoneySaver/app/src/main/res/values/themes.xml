<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoneySaver" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Texte par defaut -->
    <style name="DefaultTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <!-- Le style peut Ãªtre changer, ajouter un dossier
         font dans le dossier res puis glisser la ressource dedans -->
        <!-- <item name="android:fontFamily">@font/OurFont</item> -->
    </style>

    <!-- Sous-titre par defaut -->
    <style name="SubtitleTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/purple_700</item>
    </style>

    <!-- Titre par defaut -->
    <style name="TitleTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>