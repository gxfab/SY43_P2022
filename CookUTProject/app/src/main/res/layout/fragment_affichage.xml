<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AffichageFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background"
    >


    <Button
        android:id="@+id/button_affichageSemestre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/gold_CookUT"
        android:text="Semestre" />

    <Button
        android:id="@+id/button_affichageEvenement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="50dp"

        android:backgroundTint="@color/gold_CookUT"
        android:text="Évènement" />

    <Button
        android:id="@+id/button_affichageFacture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/gold_CookUT"
        android:text="Facture" />
</LinearLayout>