<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recapLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    tools:context=".Recap">

    <ImageButton
        android:id="@+id/imageButton_saisie"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="160dp"
        android:adjustViewBounds="true"
        android:background="@drawable/home"
        android:maxWidth="10dp"
        android:maxHeight="10dp"
        android:onClick="changeActivityMain"
        android:translationX="15dp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fillViewport="true"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="50dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/text_repas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/darkgreen_CookUT"
                android:gravity="center_horizontal"
                android:text="Repas :"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/prix_repas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/decorateurs"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/text_atelier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/darkgreen_CookUT"
                android:gravity="center_horizontal"
                android:text="Ateliers :"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/prix_atelier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/decorateurs"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/text_materiel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/darkgreen_CookUT"
                android:gravity="center_horizontal"
                android:text="MatÃ©riel :"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/prix_materiel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/decorateurs"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/text_autre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/darkgreen_CookUT"
                android:gravity="center_horizontal"
                android:text="Bilan autre :"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/prix_Autre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/decorateurs"
                android:textSize="40dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>