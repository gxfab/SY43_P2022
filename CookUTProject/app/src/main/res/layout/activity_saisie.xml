<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Saisie"
    android:orientation="vertical"
    android:background="@drawable/background">
        <ImageButton
            android:id="@+id/imageButton_saisie"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            android:maxWidth="10dp"
            android:maxHeight="10dp"
            android:translationX="15dp"
            android:adjustViewBounds="true"
            android:background="@drawable/home"
            tools:ignore="MissingConstraints"
            android:onClick="changeActivityMain"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="@color/gold_CookUT"
        android:hint="@string/expenseName" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/green_CookUT">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:allowClickWhenDisabled="false"
            android:backgroundTint="@color/gold_CookUT"
            android:hint="@string/choseEvent" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Type d'évènement"
            android:prompt="@string/choseEvent" />


    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/gold_CookUT"
        android:hint="@string/expenseAmount" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_CookUT"
        android:gravity="center_horizontal">


    <Button
            android:id="@+id/button_valider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:backgroundTint="@color/gold_CookUT"
            android:text="Valider"/>

        <Button
            android:id="@+id/button_annuler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:backgroundTint="@color/gold_CookUT"
            android:text="Reset"/>
    </LinearLayout>

</LinearLayout>