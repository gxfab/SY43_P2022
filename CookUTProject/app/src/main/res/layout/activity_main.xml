<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible"
    android:orientation="vertical"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/prix_repas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/decorateurs"
        android:textSize="40dp" />
    <Button
        android:id="@+id/button_recap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/gold_CookUT"
        android:text="Récapitulatif détaillé"
        android:onClick="changeActivityRecap"
        />
    <Button
        android:id="@+id/button_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/gold_CookUT"
        android:text="Bilan évènement"
        android:onClick="changeActivityEvent"
/>
    <Button
        android:id="@+id/button_saisie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/gold_CookUT"
        android:text="Saisir une facture"
        android:onClick="changeActivitySaisie"
        />


</LinearLayout>